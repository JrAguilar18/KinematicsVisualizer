<Window x:Class="KinematicsVisualizer.Views.FreeFallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:KinematicsVisualizer.ViewModels"
        xmlns:scottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        Title="Caída Libre" Height="480" Width="620">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Entrada de parámetros -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Altura Inicial (m):" VerticalAlignment="Center"/>
            <TextBox Width="100" Text="{Binding AlturaInicial}" Margin="10,0"/>
            <TextBlock Text="g (m/s²):" VerticalAlignment="Center"/>
            <TextBox Width="100" Text="{Binding Aceleracion}" Margin="10,0"/>
            <Button Content="Graficar" Command="{Binding GraficarCommand}" />
        </StackPanel>

        <!-- Gráfico -->
        <scottPlot:WpfPlot x:Name="plot" Grid.Row="1"/>

        <!-- Ecuación + volver -->
        <StackPanel Grid.Row="2" Margin="0,10,0,0">
            <TextBlock Text="{Binding EcuacionVisible}"
                       FontSize="14"
                       TextWrapping="Wrap"
                       Foreground="DarkSlateGray"
                       Margin="0,0,0,10"/>
            <Button Content="Volver al Menú" Click="VolverAlMenu" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>